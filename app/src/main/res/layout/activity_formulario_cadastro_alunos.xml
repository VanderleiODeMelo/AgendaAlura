<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/formulario_cadastro_alunos_campo_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="@string/digite_seu_nome"
        android:inputType="textCapWords"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/formulario_cadastro_alunos_campo_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/digite_seu_e_mail"
        android:inputType="textEmailAddress"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/formulario_cadastro_alunos_campo_nome"
        app:layout_constraintStart_toStartOf="@id/formulario_cadastro_alunos_campo_nome"
        app:layout_constraintTop_toBottomOf="@id/formulario_cadastro_alunos_campo_nome" />

    <EditText
        android:id="@+id/formulario_cadastro_alunos_campo_telefone_fixo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/digite_seu_telefone"
        android:inputType="phone"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/formulario_cadastro_alunos_campo_email"
        app:layout_constraintStart_toStartOf="@id/formulario_cadastro_alunos_campo_email"
        app:layout_constraintTop_toBottomOf="@id/formulario_cadastro_alunos_campo_email" />

    <EditText
        android:id="@+id/formulario_cadastro_alunos_campo_telefone_celular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/telefone_celular"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@id/formulario_cadastro_alunos_campo_telefone_fixo"
        app:layout_constraintStart_toStartOf="@id/formulario_cadastro_alunos_campo_telefone_fixo"
        app:layout_constraintTop_toBottomOf="@id/formulario_cadastro_alunos_campo_telefone_fixo" />

</androidx.constraintlayout.widget.ConstraintLayout>